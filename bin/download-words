#!/bin/bash

curl -s https://raw.githubusercontent.com/dolph/dictionary/master/popular.txt > /tmp/popular.txt

if test -f resources/4-letter-words.txt
then
    rm resources/*-letter-words.txt
fi

while read line; do
    SIZE=${#line}
    if [[ "$SIZE" -gt 3 && "$SIZE" -lt 10 ]];
    then
        echo $line >> resources/$SIZE-letter-words.txt
    fi
done < /tmp/popular.txt

rm /tmp/popular.txt
